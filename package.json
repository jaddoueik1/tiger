{
  "name": "tiger-muay-thai-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "cd frontend && npm run build",
    "build:server": "cd server && npm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:server": "cd server && npm run start",
    "lint": "npm run lint:frontend && npm run lint:server",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:server": "cd server && npm run lint",
    "seed": "cd server && npm run seed",
    "install:all": "npm install && cd frontend && npm install && cd ../server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}